@model WebAppAssignmentDATABASE_5.Models.ViewModels.CountryViewModel;
@{
}
<td><input id="Name-@Model.Id" type="text" name="Name" for="Name" value="@Model.Name" /></td>

<input type="text" name="Id" for="Id" value="@Model.Id" hidden />
<td>
    @foreach (WebAppAssignmentDATABASE_5.Models.ViewModels.CityViewModel city in @Model.Cities)
    {
        <p>@city.Name</p>
    }
</td>
<td><button type="submit" class="btn btn-primary edit-submit-btn" name="@Model.Id" value="Edit">Edit</button></td>
<td class="td-btn">
    <button id="@Model.Id" class="edit-btn btn-dark btn">
        Cancel
    </button>
</td>
